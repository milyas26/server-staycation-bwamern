<div class="tab-pane fade show active" id="add-item" role="tabpanel" aria-labelledby="profile-tab">
    <div class="card shadow mb-4 mt-2">
        <div class="card-body">
            <form action="/admin/item/<%= item.id %>?_method=PUT" method="POST" enctype="multipart/form-data">
                <div class="form-group">
                    <label for="name">Title</label>
                    <input type="text" class="form-control" value="<%= item.title %>" name="title" placeholder="Enter Title" required>
                </div>
                <div class="form-group">
                    <label for="name">Price</label>
                    <input type="text" class="form-control" value="<%= item.price %>" name="price" placeholder="Enter Price" required>
                </div>
                <div class="form-group">
                    <label for="name">City</label>
                    <input type="text" class="form-control" value="<%= item.city %>" name="city" placeholder="Enter city" required>
                </div>
                <div class="form-group">
                    <label for="name">Category</label>
                    <select class="form-control" name="categoryId" id="">
                        <option value="<%= item.categoryId._id %>"><%= item.categoryId.name %></option>
                        <% for(let i = 0; i < category.length; i++) { %>
                            <option value="<%= category[i].id %>"><%= category[i].name %></option>
                        <% } %>
                    </select>
                </div>
                <div class="form-group">
                    <label for="name">Image</label>
                    <input type="file" class="form-control" name="image" multiple >
                </div>
                <div class="form-group">
                    <label for="name">Description</label>
                    <textarea name="about" class="form-control"><%= item.description %></textarea>
                </div>
                <a href="/admin/item" class="btn btn-warning">Cancel</a>
                <button type="submit" class="btn btn-primary">Save</button>
            </form>
        </div>
    </div>
</div>